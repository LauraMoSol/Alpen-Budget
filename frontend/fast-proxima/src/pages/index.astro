---
import CSVUpload from '../components/CSVUpload.jsx';
import GraphCarousel from '../components/GraphCarousel.jsx';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Alpen Budget - Personal Expense Tracker</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.3.3/dist/tailwind.min.css" rel="stylesheet">
  </head>
  <body class="bg-gray-900 text-gray-100 font-sans">
    <!-- Landing Section -->
    <section id="landing" class="flex flex-col items-center justify-center min-h-screen text-center px-4">
      <h1 class="text-4xl font-bold mb-2">Alpen Budget</h1>
      <p class="text-xl mb-6">Personal Expense Tracker<br>Offline HTML report generator</p>

      <CSVUpload />
    </section>

    <!-- Carousel Section -->
    <section id="carousel-section" class="min-h-screen px-4 py-12 hidden">
      <h2 class="text-3xl font-semibold text-center mb-6">Your Reports</h2>
      <GraphCarousel />
    </section>

    <script type="module" src="/src/components/scroll.js"></script>
  </body>
</html>
