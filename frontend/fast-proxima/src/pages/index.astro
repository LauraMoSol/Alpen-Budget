---
import '../styles/global.css';
import ScrollReveal from '../components/ScrollReveal.astro';
import ReportSection from '../components/ReportSection.jsx';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Alpen Budget - Personal Expense Tracker</title>
  </head>

  <body>
    <div class="page-wrapper">

      <!-- LANDING / PAGE 1 -->
      <section
        id="landing"
        class="landing reveal"
        style="
          display: flex;
          flex-direction: column;
          align-items: center;
          justify-content: center;
          min-height: 100vh;
          text-align: center;
          padding: 2rem;
        "
      >
        <h1 class="title">Alpen Budget</h1>

        <p class="subtitle">
          Personal Expense Tracker<br />
          Offline HTML report generator
        </p>

        <!-- Buttons directly under subtitle -->
        <ReportSection client:load />

        <ScrollReveal />
      </section>

    </div>
  </body>
</html>
